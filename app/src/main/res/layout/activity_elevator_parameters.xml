<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layoutDescription="@xml/motion_scene_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#FFFFFF"
    tools:context=".Activity_Splash_Login">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="300dp"
        android:background="#A8A0A0"
        android:scaleType="centerCrop"
        android:src="@drawable/elevator_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="276dp"
        android:layout_height="33dp"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/logo"
        tools:layout_editor_absoluteY="16dp"
        android:text="AsansÃ¶r ID"/>

    <LinearLayout
        android:alpha="1"
        android:id= "@+id/linlay_elevator_parameters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp">


        <TextView
            android:id="@+id/elevator_id"
            android:background="@drawable/edittext_id"
            android:textStyle="bold"
            android:padding="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Id"
            android:layout_marginTop="30dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/elevator_address"
            android:background="@drawable/edittext_id"
            android:textStyle="bold"
            android:padding="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adres"
            android:layout_marginTop="15dp"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>