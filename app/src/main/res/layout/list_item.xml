<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/elev_pic"
                android:src="@drawable/elev_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/elevator_id"
                    android:fontFamily="@font/ui_font_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASANSOR1"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/elevator_address"
                    android:fontFamily="@font/ui_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Kükürtlü Mah. 6. Başran Sokak"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
        

</LinearLayout>